{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Clean build files
        {
            "label": "clean",
            "type": "shell",
            "command": "./build.sh clean"
        },
        // Linux Build Tasks
        {
            "label": "build-linux",
            "type": "shell",
            "command": "./build.sh make native debug"
        },
        {
            "label": "build-linux-release",
            "type": "shell",
            "command": "./build.sh make native"
        },
        {
            "label": "run-linux",
            "type": "shell",
            "command": "./run.sh bin/native/debug/executable"
        },
        {
            "label": "build-and-run-linux",
            "dependsOrder": "sequence",
            "dependsOn": ["build-linux", "run-linux"]
        },
        // Windows Build Tasks
        {
            "label": "build-windows",
            "type": "shell",
            "command": "./build.sh make windows debug"
        },
        {
            "label": "build-windows-release",
            "type": "shell",
            "command": "./build.sh make windows"
        },
        {
            "label": "run-windows",
            "type": "shell",
            "command": "./run.sh bin/windows/debug/executable.exe"
        },
        {
            "label": "build-and-run-windows",
            "dependsOrder": "sequence",
            "dependsOn": ["build-windows", "run-windows"]
        },
        // Generate Release Builds
        {
            "label": "generate-release-builds",
            "dependsOrder": "sequence",
            "dependsOn": ["build-windows-release", "build-linux-release"]
        },
        // Valgrind GDB Server Tasks
        {
            "label": "valgrind",
            "type": "shell",
            "command": "./run.sh valgrind --vgdb-error=0 --vgdb=full bin/native/executable",
            "isBackground": true,
        },
        {
            "label": "valgrind-cleanup",
            "type": "shell",
            "command": "kill -9 $(pgrep -f valgrind)"
        }
    ]
}
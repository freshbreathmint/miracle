{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Clean build files
        {
            "label": "clean",
            "type": "shell",
            "command": "./build.sh clean"
        },
        // Linux Build Tasks
        {
            "label": "build-linux",
            "type": "shell",
            "command": "./build.sh make native"
        },
        {
            "label": "run-linux",
            "type": "process",
            "command": "./bin/native/executable"
        },
        {
            "label": "build-and-run-linux",
            "dependsOrder": "sequence",
            "dependsOn": ["build-linux", "run-linux"]
        },
        // Windows Build Tasks
        {
            "label": "build-windows",
            "type": "shell",
            "command": "./build.sh make windows"
        },
        {
            "label": "run-windows",
            "type": "process",
            "command": "./bin/windows/executable.exe"
        },
        {
            "label": "build-and-run-windows",
            "dependsOrder": "sequence",
            "dependsOn": ["build-windows", "run-windows"]
        },
    ]
}
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Clean build files
        {
            "label": "clean",
            "type": "shell",
            "command": "./build.sh clean"
        },
        // Linux Build Tasks
        {
            "label": "build-linux",
            "type": "shell",
            "command": "./build.sh make native debug"
        },
        {
            "label": "run-linux",
            "type": "process",
            "command": "./bin/native/executable"
        },
        {
            "label": "build-and-run-linux",
            "dependsOrder": "sequence",
            "dependsOn": ["build-linux", "run-linux"]
        },
        // Windows Build Tasks
        {
            "label": "build-windows",
            "type": "shell",
            "command": "./build.sh make windows debug"
        },
        {
            "label": "run-windows",
            "type": "process",
            "command": "./bin/windows/executable.exe"
        },
        {
            "label": "build-and-run-windows",
            "dependsOrder": "sequence",
            "dependsOn": ["build-windows", "run-windows"]
        },
        // Valgrind GDB Server Tasks
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--vgdb-error=0",
                "--vgdb=full", // Enable GDB server in Valgrind. ('full' gives accuracy, at the cost of performance.)
                "bin/native/executable",
            ],
            "isBackground": true,
        },
        {
            "label": "valgrind-cleanup",
            "type": "shell",
            "command": "kill -9 $(pgrep -f valgrind)"
        }
    ]
}
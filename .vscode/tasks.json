{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        // Linux Tasks
        {
            "label": "l-clean",
            "type": "shell",
            "command": "./build.sh clean"
        },
        {
            "label": "l-build-linux",
            "type": "shell",
            "command": "./build.sh make linux dynamic debug"
        },
        {
            "label": "l-build-linux-release",
            "type": "shell",
            "command": "./build.sh make linux static"
        },
        {
            "label": "l-run-linux",
            "type": "shell",
            "command": "./run.sh bin/linux/debug/executable"
        },
        {
            "label": "l-build-and-run-linux",
            "dependsOrder": "sequence",
            "dependsOn": ["l-build-linux", "l-run-linux"]
        },
        {
            "label": "l-build-windows",
            "type": "shell",
            "command": "./build.sh make windows dynamic debug"
        },
        {
            "label": "l-build-windows-release",
            "type": "shell",
            "command": "./build.sh make windows static"
        },
        {
            "label": "l-run-windows",
            "type": "shell",
            "command": "./run.sh bin/windows/debug/executable.exe"
        },
        {
            "label": "l-build-and-run-windows",
            "dependsOrder": "sequence",
            "dependsOn": ["l-build-windows", "l-run-windows"]
        },
        {
            "label": "l-generate-release-builds",
            "dependsOrder": "sequence",
            "dependsOn": ["l-build-windows-release", "l-build-linux-release"]
        },
        {
            "label": "l-run-release",
            "type": "shell",
            "command": "./run.sh bin/linux/release/executable"
        },
        // Valgrind GDB Server Tasks
        {
            "label": "valgrind",
            "type": "shell",
            "command": "./run.sh valgrind --vgdb-error=0 --vgdb=full bin/linux/debug/executable",
            "isBackground": true,
        },
        {
            "label": "valgrind-cleanup",
            "type": "shell",
            "command": "kill -9 $(pgrep -f valgrind)"
        }
    ]
}
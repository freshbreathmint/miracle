{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Native) GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/native/executable",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Attach to Valgrind",
                    "text": "target remote | vgdb",
                    "ignoreFailures": true,
                }
            ],
            "preLaunchTask": "valgrind-gdbserver-native"
        }
    ]
}